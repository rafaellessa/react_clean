{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDirs": ["src", "tests"],
    "paths": {
      "@/*": ["*"],
      "@/tests/*": ["../tests/*"]
    },
    "baseUrl": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true,
    "jsx": "react",
    "skipLibCheck": true
  }
}

